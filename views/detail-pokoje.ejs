<script>
    // Vybere všechny tlačítka kategorie
const categoryButtons = document.querySelectorAll('.category-button');

// Připojí posluchače událostí na každé tlačítko kategorie
categoryButtons.forEach(button => {
  button.addEventListener('click', () => {
    const category = button.dataset.category; // Získá hodnotu data-category atributu

    // Skryje všechny pokoje, které neodpovídají vybrané kategorii
    const rooms = document.querySelectorAll('.room');
    rooms.forEach(room => {
      const roomCategory = room.dataset.category; // Získá hodnotu data-category atributu pokoje
      if (roomCategory !== category) {
        room.style.display = 'none';
      } else {
        room.style.display = 'block';
      }
    });
  });
});

</script>
